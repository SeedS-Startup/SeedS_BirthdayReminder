<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AlarmActivity"
    android:weightSum="100"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/grey_b" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/alarm_photo"
            android:scaleType="fitXY"
            android:background="@mipmap/balloon"
            />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_a"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alarm_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Channing Tatum"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/grey_c"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Date"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_a"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alarm_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="January 19,1998"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/grey_c"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Email"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_a"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alarm_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="mohammad.jalili.torkamani@gmail.com"
                android:textSize="10sp"
                android:maxLines="2"
                android:textStyle="bold"
                android:textColor="@color/grey_c"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Phone"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_a"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alarm_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="09378953432"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/grey_c"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:weightSum="100">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:text="Letter"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green_a"
            android:gravity="center"/>

        <TextView
            android:id="@+id/alarm_letter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:text="Happy Birthday my dear friend ."
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/grey_c"
            android:gravity="center"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Next Birthday"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_a"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alarm_nextbd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="In 279 Days (Monday)"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/grey_c"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Last Birthday"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_a"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alarm_lastbd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center"
                android:text="86 Days ago (Tuesday)"
                android:textColor="@color/grey_c"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Age"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_a"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alarm_age"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="38 years old"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/grey_c"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="Relation"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_a"
                android:gravity="center"/>

            <TextView
                android:id="@+id/alarm_relation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="My celebrity"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/grey_c"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="100">



    </LinearLayout>

</LinearLayout>